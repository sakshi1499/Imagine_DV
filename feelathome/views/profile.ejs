  <!-- End Navbar -->
  <div class="wrapper">
    <div class="page-header clear-filter" filter-color="orange">
      <div class="page-header-image" data-parallax="true" style="background-image:url('https://images.unsplash.com/photo-1557053819-aa6046add523?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=889&q=80');">
      </div>
      <div class="container">
        <div class="photo-container">
          <img  class="profile-pic "src="img/<%= user.photo %>" alt="">
        </div>

        <h3 class="title"><%= username %> </h3>
          <div class="content">
          <div class="social-description">
            <h2><%= user.commentCount %></h2>
            <p>Comments</p>
          </div>
          <div class="social-description">
            <h2><%= user.postCount %></h2>
            <p>Posts</p>
          </div>
          <div class="social-description">
            <h2><%= user.bookmarkCount %></h2>
            <p>Bookmarks</p>
          </div>
        </div>
        <br />
        <div class="social-description">
          <p>
            <i class="fa fa-list-alt" aria-hidden="true"></i>

            Category : <%=user.category %>
          </p>
        </div>
        <br/>
        <div class="social-description">
          <p>
            <a href="https://www.google.com/maps?q=<%= user.address %>" style="color:white">
          <i class="fas fa-map-marker-alt"></i>
   Location  : <%= user.address %> </p>
 </a>

        </div>
      </div>
      </div>
    </div>
    <div class="section">
      <div class="container">

<%#

        <div class="button-container">
          <a href="#button" class="btn btn-primary btn-round btn-lg">


                          <form method="post" action="" enctype="multipart/form-data">


                            <i class="fas fa-image"></i>

                                <input class="file-upload" name="cover" id="cover" type="file" accept="image/*"/>

            </form>
          </a>

          </div>
%>


          <div class="row">
          <div class="col-md-6 ml-auto mr-auto">
            <h4 class="title text-center">Wall</h4>
            <div class="nav-align-center">
              <ul class="nav nav-pills nav-pills-primary nav-pills-just-icons" role="tablist">
                <li class="nav-item">
                  <a class="nav-link" data-toggle="tab" href="#profile" role="tablist">
                    <i class="fa fa-bookmark"></i>
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link active" data-toggle="tab" href="#home" role="tablist">
                    <i class="now-ui-icons design_image"></i>
                    <!-- <i class="now-ui-icons location_world"></i> -->
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" data-toggle="tab" href="#messages" role="tablist">
                    <i class="fa fa-pen" area-hidden="true"></i>
                  </a>
                </li>
              </ul>
            </div>
          </div>

          <div class="tab-content gallery">
            <div class="tab-pane active" id="home" role="tabpanel">
              <div class="col-md-10 ml-auto mr-auto">
                <div class="row collections">
<% posts.forEach(post=>{ %>


  <div class="col-md-6">
    <img src="<%= post.image %>" alt="" class="img-raised">
    <h4><b>Title :</b> <%= post.title %></h4>
    <h4><b>Description :</b> <%= post.description %></h4>
                    </div>

<% }) %>
                </div>
              </div>
            </div>

            <div class="tab-pane" id="profile" role="tabpanel">
              <div class="col-md-10 ml-auto mr-auto">
                <div class="row collections">
                  <% postsAll.forEach(post=>{ %>

              <% if(post.bookmarkedUsers.includes(user.username)){ %>
                <div class="col-md-6" style="border-radius:2px;">
                  <img src="<%= post.image %>" alt="" class="img-raised">
                  <h4><b>Title :</b> <%= post.title %></h4>
                  <h4><b>Description :</b> <%= post.description %></h4>
                                  </div>
              <% } %>



                  <% }) %>

                </div>
              </div>
            </div>
            <div class="tab-pane" id="messages" role="tabpanel">
              <div class="col-md-10 ml-auto mr-auto">
                <div class="row collections">
                  <% posts.forEach(post=>{ %>


                    <div class="col-md-6">
                      <h4><b>Title :</b> <%= post.title %></h4>
                      <h4><b>Description :</b> <%= post.description %></h4>
                                      </div>

                  <% }) %>


                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>

 </body>
<script type="text/javascript" src="js/profile.js">

</script>

</html>
